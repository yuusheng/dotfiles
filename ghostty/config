# font & style
font-family = Maple Mono NF CN
font-size = 16
theme = Catppuccin Mocha

# clipboard
clipboard-read = allow
clipboard-write = allow

cursor-style = bar

# macos
macos-non-native-fullscreen = true
macos-titlebar-style = tabs
macos-option-as-alt = true

custom-shader = "~/.config/ghostty/shaders/cursor_smear.glsl"

keybind = global:opt+y=toggle_quick_terminal
# split movements, use https://github.com/mrjones2014/smart-splits.nvim#multiplexer-integrations when ready
keybind = performable:cmd+s>j=goto_split:down
keybind = performable:cmd+s>k=goto_split:up
keybind = performable:cmd+s>h=goto_split:left
keybind = performable:cmd+s>l=goto_split:right
